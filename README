3.3 2.7

reiterate for d5
note: danger here, denom for P(word|class) will explode out since _all_ unlabeled docs are members now...

P(feed=register | 'website on linux')
~= P('website on linux' | register) * P(register) 
~= P('website' | register) * P('on' | register) * P('linux' | register)  *  P(register) 
~= 1.3/3.3 * 2.3/3.3 * 2.9/3.3  *  3.3/6
~= 8.671/35.937 * 3.3/6
~= 0.13270

P(feed=perez | 'website on linux')
~= P('website on linux' | perez) * P(perez) 
~= P('website' | perez) * P('on' | perez) * P('linux' | perez)  *  P(perez) 
~= 0.7/2.7 * 0.7/2.7 * 0.1/2.7  *  2.7/6
~= 0.049/19.683 * 2.7/6
~= 0.00111

P(feed=register | 'website on linux') ~= 0.13270 ~= 0.991
P(feed=perez | 'website on linux')    ~= 0.00111 ~= 0.009

reiterate for d6

P(feed=register | 'website on hollywood')
~= P('website on hollywood' | register) * P(register) 
~= P('website' | register) * P('on' | register) * P('hollywood' | register) * P(register)
~= 1.3/3.3 * 2.3/3.3 * 0.4/3.3  *  3.3/6
~= 1.196/35.937 * 3.3/6
~= 0.0183

P(feed=perez | 'website on hollywood')
~= P('website on hollywood' | perez) * P(perez) 
~= P('website' | perez) * P('on' | perez) * P('hollywood' | perez) * P(perez)
~= 0.7/2.7 * 0.7/2.7 * 2.6/2.7  *  2.7/6
~= 1.274/19.683 * 2.7/6
~= 0.02912

P(feed=register | 'website on hollywood') ~= 0.0183 ~= 0.38
P(feed=perez | 'website on hollywood')    ~= 0.0291 ~= 0.62




